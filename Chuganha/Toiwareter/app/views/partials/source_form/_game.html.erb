<tr id="dynamic_input_fields">
	<th align="left" class="pattern_4">
		<font size="2"><%=t('views.partials.source_form.game.item_names.title')%></font>
	</th>
	<td colspan="3" class="pattern_4">
		<%=text_field_tag('title', @source_obj.title,
		 {:size=>60, :maxlength=>60, :style=>"ime-mode: active;"})%>
		<%=svr_error_tag("sverr_publisher", @error_msg_hash[:publisher])%>
	</td>
</tr>
<tr id="dynamic_input_fields">
	<th align="left" class="pattern_4">
		<font size="2"><%=t('views.partials.source_form.game.item_names.game_console')%></font>
	</th>
	<td colspan="3" class="pattern_4">
		<span id="game_console_grp" name="game_console_grp" class="chkgroup">
		<%=game_console_select('game_console_id', @source_obj.game_console_id)%>
		&nbsp;<font size="2"><%=t('views.partials.source_form.game.messages.description_1')%></font>
		<%=text_field_tag('game_console_dtl_name', @source_obj.game_console_dtl_name,
		 {:size=>40, :maxlength=>60, :style=>'ime-mode: active;'})%>
		</span>
		<%=svr_error_tag("sverr_game_console", @error_msg_hash[:game_console])%>
	</td>
</tr>
<tr id="dynamic_input_fields">
	<th align="left" class="pattern_4">
		<font size="2"><%=t('views.partials.source_form.game.item_names.sold_by')%></font>
	</th>
	<td class="pattern_4">
		<%=text_field_tag('sold_by', @source_obj.sold_by,
		 {:size=>50, :maxlength=>60, :style=>"ime-mode: active;"})%>
		<%=svr_error_tag("sverr_sold_by", @error_msg_hash[:sold_by])%>
	</td>
	<th align="left" class="pattern_4">
		<font size="2"><%=t('views.partials.source_form.game.item_names.release_date')%></font>
	</th>
	<td class="pattern_4">
		<span id="release_date_grp" name="release_date_grp" class="chkgroup">
		<%=default_select_date(@source_obj.release_date, :release_date,
		 {:start_year=>1970, :end_year=>Time.zone.today.year})%>
		</span>
		<%=svr_error_tag("sverr_release_date", @error_msg_hash[:release_date])%>
	</td>
</tr>
<tr id="dynamic_input_fields">
	<th align="left" class="pattern_4">
		<font size="2"><%=t('views.partials.source_form.magazine.item_names.magazine_name')%></font>
	</th>
	<td class="pattern_4">
		<%=text_field_tag('magazine_name', @source_obj.magazine_name,
		 {:size=>40, :maxlength=>60, :style=>"ime-mode: active;"})%>
		<%=svr_error_tag("sverr_magazine_name", @error_msg_hash[:magazine_name])%>
	</td>
	<th align="left" class="pattern_4">
		<font size="2"><%=t('views.partials.source_form.magazine.item_names.magazine_cd')%></font>
	</th>
	<td class="pattern_4">
		<%=text_field_tag('magazine_cd', @source_obj.magazine_cd,
		 {:size=>15, :maxlength=>19, :style=>"ime-mode: disabled;"})%>
		<%=svr_error_tag("sverr_magazine_cd", @error_msg_hash[:magazine_cd])%>
	</td>
</tr>

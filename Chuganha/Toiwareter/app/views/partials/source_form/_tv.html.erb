<tr id="dynamic_input_fields">
	<th align="left" class="pattern_4">
		<font size="2"><%=t('views.partials.source_form.tv.item_names.program_name')%></font>
	</th>
	<td colspan="3" class="pattern_4">
		<%=text_field_tag('program_name', @source_obj.program_name,
		 {:size=>60, :maxlength=>60, :style=>"ime-mode: active;"})%>
		<%=svr_error_tag("sverr_program_name", @error_msg_hash[:program_name])%>
	</td>
</tr>
